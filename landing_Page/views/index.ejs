<script>
    document.addEventListener("DOMContentLoaded", function() {

    //javascript used for the word changer
    const words = ['lifestyle', 'home', 'commute', 'diet']; // Words to rotate
    let currentIndex = 1; // Start from the second word since the first word is already set
    
    const changingWordElement = document.getElementById('changing-word');
    const images = document.querySelectorAll('.slider-img');

    changingWordElement.textContent = words[0]; // Set the initial word without typing

    function typeWord(word) {
        let index = 0;
        changingWordElement.textContent = ''; // Clear current word
        const typingInterval = setInterval(() => {
            changingWordElement.textContent += word[index]; // Add next character
            index++;
            if (index >= word.length) {
                clearInterval(typingInterval); // Stop typing
            }
        }, 200); // Delay between each character
    }

    function changeContent() {
        // Change Word
        typeWord(words[currentIndex]);
        
        // Change Image
        images.forEach((img, i) => {
            img.classList.remove('active');
            if (i === currentIndex) {
                img.classList.add('active');
            }
        });

        // Update Current Index
        currentIndex = (currentIndex + 1) % words.length; // Assuming words.length is the same as images.length
    }
    
    // Set interval to change content
    setInterval(changeContent, 5000); // Adjust interval as needed

   //end of word changer event  

      //javascript for image slider

      let currentImageIndex = 0;
  
      function showImage(index) {
          images.forEach((img, i) => {
              // Remove .active from all images
              img.classList.remove('active');
              // Add .active to the current image
              if (i === index) {
                  img.classList.add('active');
              }
          });
      }
  
      function nextImage() {
          currentImageIndex = (currentImageIndex + 1) % images.length;
          showImage(currentImageIndex);
      }
  
      if (images.length > 0) {
          showImage(currentImageIndex);
          setInterval(nextImage, 5000);
      }
      //end of image slider


      //javascript for observer for gif event
      const observer = new IntersectionObserver(entries => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                const img = entry.target;
                const src = img.getAttribute("data-src");
                img.setAttribute("src", src);
                observer.unobserve(img);
            }
        });
    });

    document.querySelectorAll('.gifImageSection img').forEach(img => {
        observer.observe(img);
    });

      //end of observer event

      //javascript set for the number changer
    
      const counters = document.querySelectorAll('.number');

      const counterObserver = new IntersectionObserver(entries => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const counter = entry.target;
            const speed = 300; // Lower value for slower counting
            const updateCount = () => {
              const target = +counter.getAttribute('data-target');
              const count = +counter.innerText.replace(',', ''); // Remove commas before conversion to number
              const suffix = counter.getAttribute('data-suffix') || ''; // Get the suffix
              const increment = target / speed;
    
              if (count < target) {
                counter.innerText = (Math.ceil(count + increment)).toLocaleString(); // Format number with commas
                setTimeout(updateCount, 5); // Higher value for slower updates
              } else {
                counter.innerText = target.toLocaleString() + suffix; // Format number with commas and append the suffix
                counterObserver.unobserve(counter); // Stop observing the counter once it reaches the target
              }
            };
            updateCount();
          }
        });
      }, { threshold: 1.0 });
    
      counters.forEach(counter => {
        counterObserver.observe(counter); // Start observing each counter
      });

      //end of number changer event handler




    });
</script>

